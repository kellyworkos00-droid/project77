// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique
  bio           String?
  theme         String    @default("midnight") // midnight, ocean, forest, sunset, nord, highcontrast
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  likes         Like[]
  followers     Follow[]  @relation("UserFollowers")
  following     Follow[]  @relation("UserFollowing")
  bulletinBoards BulletinBoardMember[]
  messages      Message[] @relation("MessageSender")
  receivedMessages Message[] @relation("MessageReceiver")
  streaks       Streak[]
  reposts       Repost[]
  shares        Share[]
  liveStreams   LiveStream[]
  memories      Memory[]
  notifications Notification[] @relation("UserNotifications")
  sentNotifications Notification[] @relation("NotificationSender")
  
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BulletinBoard {
  id          String   @id @default(cuid())
  name        String
  description String?
  image       String?
  isPrivate   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  members     BulletinBoardMember[]
  posts       Post[]
  
  @@map("bulletin_boards")
}

model BulletinBoardMember {
  id              String        @id @default(cuid())
  userId          String
  bulletinBoardId String
  role            String        @default("member") // admin, moderator, member
  joinedAt        DateTime      @default(now())
  
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  bulletinBoard   BulletinBoard @relation(fields: [bulletinBoardId], references: [id], onDelete: Cascade)
  
  @@unique([userId, bulletinBoardId])
  @@map("bulletin_board_members")
}

model Post {
  id              String        @id @default(cuid())
  content         String        @db.Text
  mediaUrl        String?
  mediaType       String?       // image, video
  userId          String
  bulletinBoardId String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  bulletinBoard   BulletinBoard? @relation(fields: [bulletinBoardId], references: [id], onDelete: SetNull)
  comments        Comment[]
  likes           Like[]
  reposts         Repost[]
  shares          Share[]
  
  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([userId, postId])
  @@map("likes")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  
  follower    User     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)
  
  @@unique([followerId, followingId])
  @@map("follows")
}

model Message {
  id         String   @id @default(cuid())
  content    String   @db.Text
  senderId   String
  receiverId String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
  
  sender     User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  
  @@map("messages")
}

model Streak {
  id            String   @id @default(cuid())
  userId        String
  currentStreak Int      @default(1)
  longestStreak Int      @default(1)
  lastActiveDate DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId])
  @@map("streaks")
}

model Repost {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([userId, postId])
  @@map("reposts")
}

model Share {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("shares")
}

model LiveStream {
  id        String   @id @default(cuid())
  title     String
  userId    String
  isActive  Boolean  @default(true)
  streamUrl String?
  createdAt DateTime @default(now())
  endedAt   DateTime?
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("live_streams")
}

model Memory {
  id          String   @id @default(cuid())
  title       String
  description String?
  userId      String
  eventDate   DateTime
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("memories")
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // "board_created", "new_follower", "post_like", "comment", etc.
  message   String
  userId    String   // recipient
  senderId  String?  // who triggered the notification
  boardId   String?  // if related to a board
  postId    String?  // if related to a post
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  sender    User?    @relation("NotificationSender", fields: [senderId], references: [id], onDelete: Cascade)
  
  @@map("notifications")
  @@index([userId, read])
}
